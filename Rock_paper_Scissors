import tkinter as tk
import random

window = tk.Tk()
window.title("Rock-Paper-Scissors Game")
window.geometry("400x400")
window.config(bg="#d4fcd4") 

user_score = 0
comp_score = 0

choices = {
    "rock": "🪨 Rock",
    "paper": "📄 Paper",
    "scissors": "✂️ Scissors"
}

result_label = tk.Label(window, text="", font=("Helvetica", 16, "bold"), bg="#d4fcd4")
result_label.pack(pady=10)

score_label = tk.Label(window, text="Score -> You: 0 | Computer: 0", font=("Helvetica", 12), bg="#d4fcd4")
score_label.pack(pady=5)

choice_label = tk.Label(window, text="", font=("Helvetica", 12), bg="#d4fcd4")
choice_label.pack(pady=5)

def play(user_choice):
    global user_score, comp_score

    computer_choice = random.choice(list(choices.keys()))

    user_text = choices[user_choice]
    comp_text = choices[computer_choice]

    choice_label.config(text=f"You chose: {user_text} | Computer chose: {comp_text}")

    if user_choice == computer_choice:
        result = "It's a tie! 🤝"
        result_label.config(fg="black")
    elif (user_choice == "rock" and computer_choice == "scissors") or \
         (user_choice == "scissors" and computer_choice == "paper") or \
         (user_choice == "paper" and computer_choice == "rock"):
        result = "You win! 🎉"
        user_score += 1
        result_label.config(fg="green")
    else:
        result = "Computer wins! 🤖"
        comp_score += 1
        result_label.config(fg="red")

    result_label.config(text=result)
    score_label.config(text=f"Score -> You: {user_score} | Computer: {comp_score}")

button_frame = tk.Frame(window, bg="#d4fcd4")
button_frame.pack(pady=20)

rock_btn = tk.Button(button_frame, text="🪨 Rock", width=10, font=("Arial", 12), command=lambda: play("rock"))
rock_btn.grid(row=0, column=0, padx=10)

paper_btn = tk.Button(button_frame, text="📄 Paper", width=10, font=("Arial", 12), command=lambda: play("paper"))
paper_btn.grid(row=0, column=1, padx=10)

scissors_btn = tk.Button(button_frame, text="✂️ Scissors", width=10, font=("Arial", 12), command=lambda: play("scissors"))
scissors_btn.grid(row=0, column=2, padx=10)

exit_btn = tk.Button(window, text="Exit", font=("Arial", 12), command=window.destroy)
exit_btn.pack(pady=20)

window.mainloop()
